@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light ">Delet Product</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form method="post">
	<div class="border p-3 pt-4">
		
		<div asp-validation-summary="All"></div>
		<input asp-for="Id" hidden />
				<div class="mb-3 p-1">
					<label class="p-1">Product Title</label>
					<input asp-for=Title type="text" disabled class="form-control" />
				</div>

				<div class="mb-3 p-1">
					<label class="p-1">Description</label>
					<textarea asp-for=Description type="email" disabled class="form-control" ></textarea>

				</div>
				
				<div class="mb-3 p-1">
					<label class="p-1">Author</label>
					<input asp-for=Author type="text" disabled class="form-control" />

				</div>
				<div class="mb-3 p-1">
					<label class="p-1">List Price</label>
					<input asp-for=ListPrice type="number" disabled class="form-control" />

				</div>
				<div class="mb-3 p-1">
					<label class="p-1">Price</label>
					<input asp-for=Price type="number" disabled class="form-control" />

				</div>
				
				

		<div class="row">

			<div class="col-6 col-md-3">
				<button type="submit" asp-action="Delete" class="btn btn-danger form-control">Delete</button>
			</div>

			<div class="col-6 col-md-3">
				<a class="btn btn-outline-secondary form-control" asp-controller="Product" asp-action="Index">
					Back To List
				</a>
			</div>

		</div>

	</div>

</form>
	</div>
</div>
