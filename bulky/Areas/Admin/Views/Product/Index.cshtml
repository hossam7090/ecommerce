
@model List<Product>
<partial name="_Notification"/>
@await Html.PartialAsync("_Notification")


<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light ">Product List</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="container">

			<div class="row  pb-3">
				<div class="col-2 text-end">
					<a class="btn btn-primary" asp-controller="HomeAdmin" asp-action="Index">
						back to home
					</a>
				</div>
				
				<div class="col-12 text-end">
					<a class="btn btn-primary" asp-controller="Product" asp-action="Upsert">
						<i class="bi bi-plus-circle-dotted"></i> Create New Product
					</a>
				</div>
			</div>

			<table class="table table-bordered  table-striped">
				<thead>
					<tr>
						<th>Product name</th>
						<th>Price</th>
						<th>Brand</th>
						<th>Category</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var obj in Model)
					{
						<tr>
							<td>@obj.Title</td>
							<td>@obj.Price</td>
							<td>@obj.Author</td>
							<td>@obj.Category.Name</td>
							<td>
								<div class="w-75 btn-group" role="group">
									<a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class=" btn btn-secondary mx-2">
										<i class="bi bi-pencil-square"></i> Edit
									</a>
									<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class=" btn btn-danger mx-2">
										<i class="bi bi-trush-fill"></i> Delete
									</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

