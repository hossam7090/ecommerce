@model Category



<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light ">Edit Category</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form method="post">
	<div class="border p-3 pt-4">
		
		<div asp-validation-summary="All"></div>

		<div class="mb-3 p-1">
			<label class="p-1">Category Name</label>
			<input asp-for=Name type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="mb-3 p-1">
			<label class="p-1">Display Order</label>
			<input asp-for=Order type="number" class="form-control" />
			<span asp-validation-for="Order" class="text-danger"></span>

		</div>

		<div class="row">

			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-dark form-control">Edit</button>
			</div>

			<div class="col-6 col-md-3">
				<a class="btn btn-outline-secondary form-control" asp-controller="Category" asp-action="Index">
					Back To List
				</a>
			</div>

		</div>

	</div>

</form>
	</div>
</div>


