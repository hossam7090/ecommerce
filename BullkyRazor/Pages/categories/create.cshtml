@page
@model BullkyRazor.Pages.categories.createModel


<form method="post">
	<div class="border p-3 pt-4">
		<div class="row pb-3">
			<h2 class="text-secondary ">Create Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		
		<div class="mb-3 p-1">
			<label class="p-1">Category Name</label>
			<input asp-for=Category.Name type="text" class="form-control" />
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div>

		<div class="mb-3 p-1">
			<label class="p-1">Display Order</label>
			<input asp-for=Category.Order type="number" class="form-control" />
			<span asp-validation-for="Category.Order" class="text-danger"></span>

		</div>

		<div class="row">

			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-dark form-control">Create</button>
			</div>

			<div class="col-6 col-md-3">
				<a class="btn btn-outline-secondary form-control" asp-page="/categories/Index" >
					Back To List
				</a>
			</div>

		</div>

	</div>

</form>
