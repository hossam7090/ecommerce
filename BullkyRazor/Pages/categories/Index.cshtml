@page
@model BullkyRazor.Pages.categories.IndexModel
<div class="container">

	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
			<hr />

		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-page="/categories/create">
				<i class="bi bi-plus-circle-dotted"></i> Create New Category
			</a>
		</div>
	</div>

	<table class="table table-bordered  table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Display Order</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.CategoryList.OrderBy(u => u.Order))
			{
				<tr>
					<td>@obj.Name</td>
					<td>@obj.Order</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-page="/categories/edit" asp-route-id="@obj.Id" class=" btn btn-secondary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-page="/categories/delete" asp-route-id="@obj.Id" class=" btn btn-danger mx-2">
								<i class="bi bi-trush-fill"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
