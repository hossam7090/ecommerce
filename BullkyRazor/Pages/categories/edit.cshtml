@page
@model BullkyRazor.Pages.categories.editModel
<form method="post">
	<div class="border p-3 pt-4">
		<div class="row pb-3">
			<h2 class="text-secondary ">Edit Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<input asp-for="Category.Id" hidden />

		<div class="mb-3 p-1">
			<label class="p-1">Category Name</label>
			<input asp-for=Category.Name type="text" class="form-control" />
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div>

		<div class="mb-3 p-1">
			<label class="p-1">Display Order</label>
			<input asp-for=Category.Order type="number" class="form-control" />
			<span asp-validation-for="Category.Order" class="text-danger"></span>

		</div>

		<div class="row">

			<div class="col-6 col-md-3">
				<button type="submit" asp-action="Update" class="btn btn-dark form-control">Edit</button>
			</div>

			<div class="col-6 col-md-3">
				<a class="btn btn-outline-secondary form-control" asp-page="/categories/Index">
					Back To List
				</a>
			</div>

		</div>

	</div>

</form>
